{% extends 'base.html.twig' %}

{% block title %}Liste des jeux joués{% endblock %}

{% block body %}

<h1 class="text-2xl text-center my-1 text-orange-400">Liste des jeux terminés</h1>

<a class="btn btn-primary" href="{{ path('add_jeu')}}">Ajouter un jeu</a> <br>

<ul class="w-full flex flex-col gap-5 items-center justify-between">
    {% for jeu in jeux %}
    <li class="w-3/4">
        <a href="#">
            <figure class="flex flex-row gap-5 items-center">
                <img class="max-w-xs rounded-lg" src="{{ jeu.image }}" alt="{{ jeu.Titre }}">
                <figcaption class="w-full">
                    <div class="flex justify-between">
                        <h2 class="text-xl text-orange-400">{{jeu.Titre}}</h2>
                        <p>{{ jeu.dateSortie | date('d/m/Y')}}</p>
                    </div>
                    <p>Note : {{ jeu.note}}</p>
                    <button class="bg-amber-700 text-white py-1 px-2 my-1 rounded-md">Voir mon avis</button>
                </figcaption>
            </figure>
        </a>
    </li>
    {% endfor %}
</ul>
{% endblock %}